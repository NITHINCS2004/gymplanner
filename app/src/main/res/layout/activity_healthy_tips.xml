<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthyTips">

    <!-- Title for the Healthy Tips -->
    <TextView
        android:id="@+id/tipsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Healthy Tips"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Content for the Healthy Tips -->
    <TextView
        android:id="@+id/tipsContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1. Stay Hydrated: Drink water before, during, and after your workout to maintain proper hydration levels.\n\n
    2. Focus on Nutrition: Eat a balanced meal with protein, carbs, and healthy fats for energy and recovery.\n\n
    3. Rest and Recovery: Ensure you get enough rest between workouts to allow muscles to recover.\n\n
    4. Warm Up Cool Down: Always warm up before and cool down after your workout to prevent injuries.\n\n
    5. Consistency is Key: Stick to a regular workout schedule and make gradual progress.\n\n
    6. Listen to Your Body: Pay attention to how your body feels and avoid overtraining or pushing yourself too hard."
        android:textSize="16sp"
        android:textColor="#555555"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tipsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tipsContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
